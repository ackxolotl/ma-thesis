% department options
\newcommand{\tumlang@define@department}[3]
{
	\expandafter\def\csname#1nameenglish\endcsname{#2}
	\expandafter\def\csname#1namegerman\endcsname{#3}
	\addto\captionsenglish{\expandafter\def\csname#1name\endcsname{\csname#1nameenglish\endcsname}}
	\addto\captionsngerman{\expandafter\def\csname#1name\endcsname{\csname#1namegerman\endcsname}}
	\DeclareOption{#1}{
		\ds@TUM
		\def\departmentcode{#1}
		\def\departmentname{\csname#1name\endcsname}
		\def\departmentlogo{\csname#1Logo\endcsname}
	}
}
